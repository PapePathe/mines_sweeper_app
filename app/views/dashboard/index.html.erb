<h1>Mines Sweeper</h1>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Create a new board</h5>
    <%= form_with model: nil, url: boards_path do |form| %>
      <div class='row'>
        <div class='col'>
          <%= form.email_field :email, placeholder: 'email', class: 'form-control' %>
        </div>
        <div class='col'>
          <%= form.text_field :board_name, placeholder: 'board name', class: 'form-control' %>
        </div>
      </div>
      <div class='row my-2'>
        <div class='col'>
          <%= form.number_field :board_width, placeholder: 'board width', class: 'form-control'  %>
        </div>
        <div class='col'>
          <%= form.number_field :board_height, placeholder: 'board height', class: 'form-control'  %>
        </div>
        <div class='col'>
          <%= form.number_field :number_of_mines, placeholder: 'number of mines', class: 'form-control'  %>
        </div>
      </div>
      <%= form.submit "Generate Board", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="card my-5">
  <div class="card-body">
    <h5 class="card-title">Recent boards</h5>
    <table class='table'>
      <tbody>
        <% @recent_boards.each do |board| %>
          <tr>
            <td><%= l board.created_at, format: :short %></td>
            <td><%= board.name %></td>
            <td><%= board.email %></td>
            <td><%= link_to "View", board_path(board) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "view all generated boards", boards_path, class: 'btn btn-primary' %>

